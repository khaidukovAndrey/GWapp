<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="281dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:text="Skin Scanner"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scan_menu_load_photo"
        android:layout_width="300dp"
        android:layout_height="265dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_menu_button"
        android:drawableTop="@drawable/load_photo"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:text="Load Photo"
        android:textAllCaps="false"
        android:textSize="34sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_menu_take_photo" />

    <Button
        android:id="@+id/scan_menu_take_photo"
        android:layout_width="300dp"
        android:layout_height="265dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/main_menu_button"
        android:drawableTop="@drawable/take_photo"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:text="Take Photo"
        android:textAllCaps="false"
        android:textSize="34sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>